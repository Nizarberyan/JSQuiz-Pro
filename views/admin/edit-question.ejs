<%- include('../partials/header', { title: 'Edit Question', userId, userRole }) %>

<div class="flex-1 bg-gray-100 min-h-screen">
    <div class="max-w-2xl mx-auto mt-10 p-6">
        <div class="bg-white rounded-lg shadow-lg p-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-6">Edit Question</h1>
            
            <form method="POST" action="/admin/edit/<%= question.id %>" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Question</label>
                    <textarea name="question" rows="3" class="w-full px-4 py-2 border rounded-lg" required><%= question.question %></textarea>
                </div>

                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-700">Options</label>
                    <% question.options.forEach((opt, i) => { %>
                        <div class="flex items-center gap-2">
                            <input type="checkbox" name="correct" value="<%= i %>" <%= question.correctAnswer.includes(i) ? 'checked' : '' %>>
                            <input type="text" name="option<%= i+1 %>" value="<%= opt %>" class="flex-1 px-3 py-2 border rounded-lg" required>
                        </div>
                    <% }) %>
                </div>

                <div class="flex gap-3 pt-4">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg">Save</button>
                    <a href="/admin" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
