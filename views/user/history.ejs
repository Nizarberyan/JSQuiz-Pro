<%- include('../partials/header', { title: 'My History', userId, userRole }) %>

<div class="flex-1 bg-gray-100 min-h-screen">
    <div class="max-w-4xl mx-auto mt-10 p-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-8">My Quiz History</h1>
        
        <div class="bg-white rounded-lg shadow-lg p-6">
            <% if (scores.length === 0) { %>
                <p class="text-gray-600 text-center py-8">No quiz history yet. Start playing!</p>
            <% } else { %>
                <div class="space-y-3">
                    <% scores.forEach(score => { %>
                        <div class="border border-gray-200 p-4 rounded-lg hover:bg-gray-50">
                            <div class="flex justify-between items-center">
                                <div>
                                    <h3 class="font-semibold text-lg"><%= score.theme %></h3>
                                    <p class="text-sm text-gray-500"><%= new Date(score.played_at).toLocaleDateString() %></p>
                                </div>
                                <div class="text-right">
                                    <p class="text-2xl font-bold text-blue-600"><%= score.score %>/<%= score.total %></p>
                                    <p class="text-sm text-gray-600"><%= score.percentage %>%</p>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
